{
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":automergeMinor",
    ":dependencyDashboard",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    ":pinDevDependencies"
  ],
  "enabledManagers": [
    "pep621",
    "pre-commit",
    "github-actions",
    "gitlabci",
    "devcontainer",
    "dockerfile",
    "custom.regex"
  ],
  "allowedPostUpgradeCommands": [
    "^uvx rhiza materialize --force \\.$"
  ],
  "timezone": "Asia/Dubai",
  "schedule": [
    "before 10am on tuesday"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "matchPackageNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "jebel-quant/rhiza"
      ],
      "automerge": false,
      "postUpgradeTasks": {
        "commands": [
          "uvx rhiza materialize --force .",
          "git add --all"
        ],
        "fileFilters": [
          "**/*"
        ],
        "executionMode": "branch"
      }
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)\\.rhiza/template\\.yml$/"
      ],
      "matchStrings": [
        "repository:\\s*\"(?<depName>[^\"]+)\"\\s*\\nref:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
