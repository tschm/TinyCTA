{
    "extends": [
        "config:recommended",
        ":enablePreCommit",
        ":automergeMinor",
        ":dependencyDashboard",
        ":maintainLockFilesWeekly",
        ":semanticCommits",
        ":pinDevDependencies"
    ],
    "enabledManagers": [
        "pep621",
        "pre-commit",
        "github-actions",
        "gitlabci",
        "devcontainer",
        "dockerfile",
        "regex"
    ],
    "timezone": "Asia/Dubai",
    "schedule": [
        "before 10am on tuesday"
    ],
    "packageRules": [
      {
        "matchManagers": ["pep621"],
        "matchPackageNames": ["python"],
        "enabled": false
      }
    ],
    "regexManagers": [
      {
        "fileMatch": ["^\\.rhiza/template\\.yml$"],
        "matchStrings": [
          "template-repository:\\s*\"(?<depName>[^\"]+)\"\\s*\\ntemplate-branch:\\s*\"(?<currentValue>[^\"]+)\""
        ],
        "datasourceTemplate": "github-releases",
        "versioningTemplate": "semver"
      }
    ]
}
